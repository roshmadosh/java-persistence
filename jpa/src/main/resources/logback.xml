<configuration>
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<!-- encoders are assigned the type
			 ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
		<property name="LOG_DIR" value="${CATALINA_HOME}/logs/jpa" />
		<property name="SEP" value="||" />
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOG_DIR:-.}/log_.%d{yyyy-MM-dd}.log</fileNamePattern>
		</rollingPolicy>
		<append>true</append>
		
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} ${SEP} [%thread] ${SEP} %-5level ${SEP} %logger{36} -%kvp- %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="org.hibernate">
		<level value="info"/>
	</logger>

	<root level="INFO">
		<appender-ref ref="FILE" />
	</root>
</configuration>

	
